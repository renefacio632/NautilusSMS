<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NautilusSMS.Settings.SettingProtect"
             Title="Proteccion">
    <VerticalStackLayout
        Spacing="25"
        Margin="10"
        Padding="5,10">
        <Label Padding="10,10"
            Text="Habilitar clave de cifrado"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="StartAndExpand" />

        <Label Padding="10,10"
            Text="Cambiar clave de cifrado"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="StartAndExpand" />

        <Label Padding="10,10"
            Text="Caducidad clave de cifrado"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="StartAndExpand" />

        <Label Padding="10,10"
            Text="Intervalo de expiracion"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="StartAndExpand" />
    </VerticalStackLayout>
</ContentPage>