<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NautilusSMS.Settings.SettingNotify"
             Title="Notificaciones">
    <VerticalStackLayout
        Spacing="25"
        Margin="10"
        Padding="5,10">
        <Label Padding="10,10"
            Text="Recuperar Mensajes"
            HorizontalOptions="StartAndExpand"
            VerticalOptions="StartAndExpand"/>

        <Label Padding="10,10"
            Text="Notificacion de Mensajes"
            HorizontalOptions="StartAndExpand"
            VerticalOptions="StartAndExpand"/>

        <Label Padding="10,10"
            Text="Tono Notificacion"
            HorizontalOptions="StartAndExpand"
            VerticalOptions="StartAndExpand"/>

        <Label Padding="10,10"
            Text="Vibracion" 
            HorizontalOptions="StartAndExpand"
            VerticalOptions="StartAndExpand"/>
    </VerticalStackLayout>
</ContentPage>